<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"

    android:background="@drawable/timeline_item_bg"
    >

    <ImageView
        android:id="@+id/appImageTimeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:src="@drawable/icons8_facebook_timeline"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/appImageTimeline"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icons8_clock_timeline"
                android:background="@color/transparent"
                android:layout_gravity="center_vertical"

                />

            <TextView
                android:id="@+id/appStartTimeimeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkGray"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:text="Just Now"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                />



        </LinearLayout>

        <TextView
            android:id="@+id/appNameTimeline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Khan Academy"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="5dp"

            />

        <TextView
            android:id="@+id/appTimeTimeline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="27sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="1hr 5min"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/typeImageTimeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:src="@drawable/icons8_decrease"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/changePercentTimeLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textColor="@color/timeLineNegative"
                android:text="- 15%"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"

                />

        </LinearLayout>




    </LinearLayout>

    <com.gelitenight.waveview.library.WaveView
        android:id="@+id/timeLineWave"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true" />



</RelativeLayout>