<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/expired_goals_item_bg"
    android:layout_margin="7dp"
    >

    <ImageView
        android:id="@+id/expiredAppIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_centerVertical="true"
        android:src="@drawable/icons8_spotify_medium"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/expiredAppIcon"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/expiredAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat"
                android:text="WhatsApp"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/completedStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="@color/orangeExpired"
                android:text="Expired"
                android:textSize="13sp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/montserrat"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/expiredAppName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/darkGray"
            android:fontFamily="@font/montserrat"
            android:text="Academy Limited"
            android:visibility="gone"
            />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            >

            <TextView
                android:id="@+id/expiredCompletedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/nPText"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textSize="10sp"
                android:text="Limit Usage"

                />

            <TextView
                android:id="@+id/expiredGoalTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 2hrs 15min"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/darkGray"
                android:textSize="10sp"
                android:layout_marginLeft="7dp"
                android:layout_gravity="center_vertical"
                />












        </LinearLayout>



    </LinearLayout>

    <ImageView
        android:id="@+id/expiredStatusImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_alignParentEnd="true"
        android:src="@drawable/icons8_expired"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true" />





</RelativeLayout>