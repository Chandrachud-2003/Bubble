<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:background="@drawable/goals_ongoing_list_bg"
    >

    <com.gelitenight.waveview.library.WaveView
        android:id="@+id/goalOngoingWave"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/ongoingAppIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/icons8_kindle"
            />

        <TextView
            android:id="@+id/ongoingAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="WhatsApp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="7dp"
            />

        <TextView
            android:id="@+id/ongoingAppName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkGray"
            android:fontFamily="@font/montserrat"
            android:textSize="12sp"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/ongoingAppUsageType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Limit Usage"
            android:textColor="@color/nPText"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="7dp"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/ongoingTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold"
            android:text="2 hrs"
            />






            <TextView
                android:id="@+id/ongoingLeftText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="- 45 min left"
                android:textColor="@color/nPText"
                android:layout_marginTop="5dp"

                />






    </LinearLayout>





</RelativeLayout>