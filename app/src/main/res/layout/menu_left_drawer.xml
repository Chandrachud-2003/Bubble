<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        >

    <LinearLayout
        android:id="@+id/homeMenuLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/homeMenuImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/home_menu"
            android:background="@color/transparent"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/homeMenuText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Home"
            android:textColor="@color/menuNotSelected"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/timerMenuLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"

        >

        <ImageView
            android:id="@+id/timerMenuImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/timer_menu"
            android:background="@color/transparent"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/timerMenuText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Timer"
            android:textColor="@color/menuNotSelected"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            />


    </LinearLayout>

        <LinearLayout
            android:id="@+id/goalCenterMenuLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"

            >

            <ImageView
                android:id="@+id/goalcenterMenuImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/goals_menu"
                android:background="@color/transparent"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/goalcenterMenuText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="GoalCenter"
                android:textColor="@color/menuNotSelected"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/appsMenuLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"

            >

            <ImageView
                android:id="@+id/appsMenuImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/your_apps"
                android:background="@color/transparent"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/appsMenuText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Your Apps"
                android:textColor="@color/menuNotSelected"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/timelineMenuLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:visibility="gone"

            >

            <ImageView
                android:id="@+id/timelineMenuImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/timeline_menu"
                android:background="@color/transparent"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/timelineMenuText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Timeline"
                android:textColor="@color/menuNotSelected"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />


        </LinearLayout>



        <LinearLayout
            android:id="@+id/aboutMenuLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"

            >

            <ImageView
                android:id="@+id/aboutMenuImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/info_menu"
                android:background="@color/transparent"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/aboutMenuText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="About"
                android:textColor="@color/menuNotSelected"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/settingsMenuLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="50dp"

        >

        <ImageView
            android:id="@+id/settingsMenuImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/settings_menu"
            android:background="@color/transparent"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/settingsMenuText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Settings"
            android:textColor="@color/menuNotSelected"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            />


    </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>